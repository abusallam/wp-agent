# Environment Type
FLASK_ENV=production
FLASK_DEBUG=0
LOG_LEVEL=INFO

# WordPress Database Configuration
WORDPRESS_DB_HOST=db
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=<strong-password>
WORDPRESS_DB_NAME=wordpress
MYSQL_ROOT_PASSWORD=<strong-root-password>

# WordPress Site Configuration
WORDPRESS_SITE_URL=https://your-domain.com
WORDPRESS_SITE_TITLE="WordPress Agent Site"
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=<strong-admin-password>
WORDPRESS_ADMIN_EMAIL=admin@your-domain.com

# Agent Configuration
A2A_API_KEY=<strong-api-key>
WORDPRESS_PATH=/var/www/html
LOG_FORMAT=json
LOG_DIR=/var/log/wp-agent

# Security Settings
CORS_ORIGINS=https://your-domain.com
RATE_LIMIT=100/minute

# Resource Limits
PHP_MEMORY_LIMIT=512M
GUNICORN_WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
