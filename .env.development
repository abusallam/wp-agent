# Environment Type
FLASK_ENV=development
FLASK_DEBUG=1
LOG_LEVEL=DEBUG

# WordPress Database Configuration
WORDPRESS_DB_HOST=db
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress_dev
WORDPRESS_DB_NAME=wordpress_dev
MYSQL_ROOT_PASSWORD=root_password_dev

# WordPress Site Configuration
WORDPRESS_SITE_URL=http://localhost
WORDPRESS_SITE_TITLE="WP Agent Development Site"
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=admin_password_dev
WORDPRESS_ADMIN_EMAIL=admin@example.com

# Agent Configuration
A2A_API_KEY=dev_secret_key
WORDPRESS_PATH=/var/www/html
LOG_FORMAT=console

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT=200/minute

# PHP Configuration
PHP_MEMORY_LIMIT=512M